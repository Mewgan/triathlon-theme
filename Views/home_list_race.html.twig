<div class="border-title">
    <h3>Derni√®res courses</h3>
</div>
<div id="race-slider" class="race-slider">
    {% for post in posts %}
        {% set params = {} %}
        {% for arg in args %}
            {% if arg.value != '' %}
                {% set params = params|merge({(arg.route):arg.value}) %}
            {% else %}
                {% if arg.alias == 'p' %}
                    {% set params = params|merge({(arg.route):attribute(post,arg.column)}) %}
                {% elseif arg.alias == 'c' %}
                    {% set params = params|merge({(arg.route):attribute(post.categories[0],arg.column)}) %}
                {% endif %}
            {% endif %}
        {% endfor %}
        <div class="item">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <strong class="date">{{ field_render('race_date', 'post@' ~ post.id) }}</strong>
                <span class="venue">{{ post.title }}</span>
                <div class="description">
                    <p>{{ post.description }}</p>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
<a href="{{ link('race') }}" class="btn-theme black">
    <span class="txt">Voir tout</span>
    <span class="round">
        <i class="icon-arrow-right-latest-races"></i>
    </span>
</a>
